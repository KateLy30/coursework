<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Система бронирования столиков" Height="600" Width="1100">
    <Grid>
        <TextBlock Text="Введите код" HorizontalAlignment="Center" Margin="0,13,0,0" FontFamily="Segoe UI Semibold" FontSize="60"></TextBlock>
        <Grid x:Name="MainRoot" Width="900" Height="300" Background="#00000000" >
            <Grid.RowDefinitions >
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button Click="b_1_Click" x:Name="b_1" Grid.Column="0" Grid.Row="0" FontSize="40" FontFamily="Segoe UI Variable Display Semibold">1</Button>
            <Button Click="b_1_Click" x:Name="b_2" Grid.Column="1" Grid.Row="0" FontSize="40" FontFamily="Segoe UI Variable Display Semibold">2</Button>
            <Button Click="b_1_Click" x:Name="b_3" Grid.Column="2" Grid.Row="0" FontSize="40" FontFamily="Segoe UI Variable Display Semibold">3</Button>
            <Button Click="b_1_Click" x:Name="b_4" Grid.Column="0" Grid.Row="1" FontSize="40" FontFamily="Segoe UI Variable Display Semibold">4</Button>
            <Button Click="b_1_Click" x:Name="b_5" Grid.Column="1" Grid.Row="1" FontSize="40" FontFamily="Segoe UI Variable Display Semibold">5</Button>
            <Button Click="b_1_Click" x:Name="b_6" Grid.Column="2" Grid.Row="1" FontSize="40" FontFamily="Segoe UI Variable Display Semibold">6</Button>
            <Button Click="b_1_Click" x:Name="b_7" Grid.Column="0" Grid.Row="2" FontSize="40" FontFamily="Segoe UI Variable Display Semibold">7</Button>
            <Button Click="b_1_Click" x:Name="b_8" Grid.Column="1" Grid.Row="2" FontSize="40" FontFamily="Segoe UI Variable Display Semibold">8</Button>
            <Button Click="b_1_Click" x:Name="b_9" Grid.Column="2" Grid.Row="2" FontSize="40" FontFamily="Segoe UI Variable Display Semibold">9</Button>
            <Button Click="b_1_Click" x:Name="b_0" Grid.Column="1" Grid.Row="3" FontSize="40" FontFamily="Segoe UI Variable Display Semibold">0</Button>

        </Grid>
        <TextBox x:Name="text_kod" Width="150" Height="70" TextAlignment="Center"  VerticalAlignment="Bottom" Margin="0,0,0,30" BorderBrush="#FFA0A0A0" BorderThickness="5" FontFamily="Segoe UI Variable Display Semibold" FontSize="36"  />
    </Grid>
</Window>
