<Window x:Class="WpfApp1.Reservation_Add"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Новое бронирование" Height="390" Width="280">
    <Grid>
        <Button x:Name="b_exit" Content="Выйти"  Width="60" Height="20" Click="b_exit_Click" FontSize="15" Foreground="#FF5E5E5E" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,7,7,0">
            <Button.Template >
                <ControlTemplate TargetType="Button" >
                    <Border Background="LightGray" CornerRadius="8"  >
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"  Content="Выйти" Margin="0,0,0,3"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <TextBlock Text="Имя" Margin="25,20,0,0" />
        <TextBox  Width="230" Height="30" x:Name="t_name"  HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,40,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
        <TextBlock Text="Номер телефона" Margin="25,90,0,0" />
        <TextBox  Width="230" Height="30" x:Name="t_phone"  VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,110,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
        <TextBlock Text="Дата и время" Margin="25,160,0,0" />
        <TextBox Width="230" Height="30" x:Name="t_date"  HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,180,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
        <TextBlock Text="Стол" Margin="25,230,0,0" />
        <TextBox Width="230" Height="30" x:Name="t_table"  HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,250,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
        <Button x:Name="t_Add" Content="Добавить"  Width="130" Height="30" Click="t_Add_Click" FontSize="20" Foreground="#FF5E5E5E" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10">
            <Button.Template >
                <ControlTemplate TargetType="Button" >
                    <Border Background="LightGray" CornerRadius="12"  >
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"  Content="Добавить" Margin="0,0,0,3"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>
