<Window x:Class="WpfApp1.Window_reservation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Бронирования" Height="700" Width="600">
    <Grid>
        <Button x:Name="b_exit" Content="Выйти"  Width="100" Height="30" Click="b_exit_Click" FontSize="22" Foreground="#FF5E5E5E" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0">
            <Button.Template >
                <ControlTemplate TargetType="Button" >
                    <Border Background="LightGray" CornerRadius="15"  >
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"  Content="Выйти" Margin="0,0,0,6"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <TextBlock Text="Все бронирования:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,15,0,0" FontSize="28" FontWeight="Bold" />
        <ListView x:Name="listView" Margin="0,60,0,0" Height="550" VerticalAlignment="Top" FontSize="16">
            <ListView.View >
                <GridView >
                    <GridViewColumn Header="Имя" Width="160" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Номер телефона" Width="160" DisplayMemberBinding="{Binding Phone}"/>
                    <GridViewColumn Header="Дата и время" Width="200" DisplayMemberBinding="{Binding Date}"/>
                    <GridViewColumn Header="Стол" Width="55" DisplayMemberBinding="{Binding Table}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="b_reserv" Content="Добавить бронирование"  Width="310" Height="40" Click="b_reserv_Click" FontSize="22" Foreground="#FF5E5E5E" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10">
            <Button.Template >
                <ControlTemplate TargetType="Button" >
                    <Border Background="LightGray" CornerRadius="15"  >
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"  Content="Добавить бронирование" Margin="0,0,0,4"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>
